<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema untuk Android 12+ (API 31+) -->
    <style name="LaunchTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <!-- Background splash screen -->
        <item name="android:windowSplashScreenBackground">#EE9400</item>
        
        <!-- Disable icon/logo di tengah -->
        <item name="android:windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        
        <!-- Durasi splash (opsional) -->
        <item name="android:windowSplashScreenAnimationDuration">200</item>
    </style>
    
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">#EE9400</item>
    </style>
</resources>
